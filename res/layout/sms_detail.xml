<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:shrinkColumns="1"
    android:padding="10dip"
    android:id="@+id/sms_detail_layout"
    >
    <TableRow android:paddingBottom="5dip">
        <TextView
            android:text="@string/operation_card_number"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/card_number"
            android:textSize="20sp"
        />
    </TableRow>
    <TableRow android:paddingBottom="5dip">
        <TextView
            android:text="@string/operation_date"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/date"
            android:textSize="20sp"
        />
    </TableRow>
    <TableRow android:paddingBottom="5dip">
        <TextView
            android:text="@string/operation_amount"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/amount"
             android:textSize="20sp"
        />
    </TableRow>
    
    <TableRow android:paddingBottom="5dip">
        <TextView
            android:text="@string/operation_balance"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/balance"
            android:textSize="20sp"
        />
    </TableRow>
    <TableRow android:paddingBottom="5dip"
    		android:layout_height="wrap_content">
        <TextView
        	android:id="@+id/operation_place_name"
            android:text="@string/operation_place"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/place"
            android:textSize="20sp"
            android:layout_height="wrap_content"
        />
    </TableRow>
        <TableRow android:paddingBottom="5dip"
    		android:layout_height="wrap_content">
        <TextView
        	android:id="@+id/operation_name"
            android:text="@string/operation_name"
            android:paddingRight="10dip"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/operation"
            android:textSize="20sp"
            android:layout_height="wrap_content"
        />
    </TableRow>
</TableLayout>