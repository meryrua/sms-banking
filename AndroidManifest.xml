<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.smsbanking"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".SMSBankingActivity"
                  android:label="@string/app_name"
                  android:taskAffinity=""
				  android:excludeFromRecents="true" 
                  android:launchMode="singleTop" 
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       <activity android:name=".SMSDetail"
       			 android:theme="@android:style/Theme.Dialog"
                 android:label="@string/detail_info" >
       </activity>
       
       <activity android:name=".DataFilterActivity"
                 android:label="@string/filters_screen_name" >
       </activity>
       
       <activity android:name=".TestActivity"
              	 android:theme="@android:style/Theme.Dialog">
       </activity>
       
       <activity android:name=".Settings"
                 android:label="@string/app_name" >
       </activity>       
       
 		<receiver android:name=".SMSReceiver" android:enabled="true"> 
            <intent-filter android:priority="1"> 
                 <action android:name=
                    "android.provider.Telephony.SMS_RECEIVED" /> 
                 <action android:name=
                    "com.android.smsbanking.BANK_ADDRESS" /> 
                 <action android:name=
                    "com.android.smsbanking.SEND_SMS" />
            </intent-filter> 
        </receiver>
    </application>
    
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        
</manifest>